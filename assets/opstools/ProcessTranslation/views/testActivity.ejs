<div class="op-container op-widget-body">
    <% if (data.optionalInfo) { %>
        <div class="op-margin-top" style="width: 100%; text-align: center;">
            <img src="<%= data.optionalInfo.image %>" width="300px" />
        </div>
        <% } %>
            <div>
                <div class="col-xs-6">
                    <% data.fields.each(function(field, fieldName) { %>
                        <div class="op-container">
                            <div class="form-group">
                                <label>
                                    <%= data.labels[fieldName][languageData.attr('fromLanguageCode')] %> :
                                </label>
                                <textarea name="<%= fieldName + '.' + languageData.attr('fromLanguageCode') %>" readonly class="form-control" rows="3"><%= field.attr(languageData.attr('fromLanguageCode')) %></textarea>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <div class="col-xs-6">
                    <% data.fields.each(function(field, fieldName) { %>
                        <div class="op-container">
                            <div class="form-group">
                                <label>
                                    <%= data.labels[fieldName][languageData.attr('toLanguageCode')] %> ï¼š</label>
                                <textarea name="<%= fieldName + '.' + languageData.attr('toLanguageCode') %>" class="form-control" rows="3"><%= field.attr(languageData.attr('toLanguageCode')) %></textarea>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
</div>
<div class="op-container op-widget-body">
  <% if (data.optionalInfo && data.optionalInfo.image) { %>
    <div class="op-container tr-optionalinfo">
        <img class="img-responsive" src="<%= data.optionalInfo.image %>">
    </div>
    <% } %>
            <div class="op-container">
                <div class="col-xs-6">
                    <% data.fields.each(function(field, fieldName) { %>
                        <div class="op-container">
                            <div class="form-group">
                                <label>
                                    <%= data.labels[fieldName][languageData.attr('fromLanguageCode')] %> :
                                </label>
                                <textarea name="<%= fieldName + '.' + languageData.attr('fromLanguageCode') %>" readonly class="form-control tr-field-data" rows="3"><%= field.attr(languageData.attr('fromLanguageCode')) %></textarea>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <div class="col-xs-6">
                    <% data.fields.each(function(field, fieldName) { %>

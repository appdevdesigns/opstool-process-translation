        <div class="op-margin-bottom tr-languageselector">
        </div>

        <div class="workspace col-lg-9 off-botm20">
            <div class="tr-translateworkspace">
                <h4>[[= transaction.objectData.menu.action.key ]]</h4>
                <div class="op-container op-block-border tr-translateform">
                </div>

                <div>
                    <button class="btn btn-success float-right tr-translateform-submit" tr-status="cancel"><i class="fa"></i>Cancel</button>
